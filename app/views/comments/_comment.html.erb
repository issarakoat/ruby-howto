
<table class="table">
  <tbody>
    <tr>
      <td><%= comment.content %></td>
      <td><%= comment.user.email %></td>
      <td><%= link_to 'Edit', edit_howtodo_comment_path(@howtodo, comment), class: 'btn btn-sm btn-warning' if policy(comment).edit? %></td>
      <td><%= link_to 'Destroy', [@howtodo, comment], method: :delete, class: 'btn btn-sm btn-danger' if policy(comment).destroy? %></td>
    </tr>

  </tbody>
</table>