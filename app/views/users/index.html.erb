<% content_for :title do %>
  Howto 
  | 
  All Users
<% end %>

<div class="card-columns">
  <% @users.each do |user| %>
    <%= render 'users/user', user: user %>
  <% end %>
</div>
<div class="form-inline">
  <%= search_form_for @q do |f| %>
    <%= f.search_field :email_cont, placeholder: 'email' %>
    <%= f.search_field :sign_in_count_eq, placeholder: 'sign in count' %>
    <%= f.search_field :email_or_sign_in_count_eq, placeholder: 'email or sign in count' %>
    <%= f.submit %>
  <% end %>
  <div class="ml-2"></div>
  <%= link_to 'refresh', users_path %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>id</th>
      <th>
        <%= sort_link(@q, :email) %>
      </th>
      <th>created_at</th>
      <th>
        <%= 'sign_in_count'.humanize %>
      </th>
      <th>
        <%= 'current_sign_in_at'.humanize %>
      </th>
      <th>
        <%= 'last_sign_in_at'.humanize %>
      </th>
      <th>
        <%= 'current_sign_in_ip'.humanize %>
      </th>
      <th>
        <%= 'last_sign_in_ip'.humanize %>
      </th>
      <th>
       
      </th>
      <th>
        Howtodo count
      </th>
      <th>
        comment count
      </th>
      <th>
        rating count
      </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.id %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <% if user.online? %>
            <div class="text-success far fa-circle"></div>
          <% else %>
            <div class="text-danger far fa-circle"></div>
          <% end %>
          <%= link_to user.email, user_path(user) %>
        </td>

        <td>
          <%= user.created_at %>
        </td>
        <td>
          <%= user.sign_in_count %>
        </td>
        <td>
          <%= user.current_sign_in_at %>
        </td>
        <td>
          <%= user.last_sign_in_at %>
        </td>
        <td>
          <%= user.current_sign_in_ip %>
        </td>
        <td>
          <%= user.last_sign_in_ip %>
        </td>
        <td>
          <%= user.howtodos_count %>
        </td>
        <td>
          <%= user.comments_count %>
        </td>
        <td>
          <%= user.ratings_count %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

