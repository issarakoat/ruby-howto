<div class="card">
  <div class="card-header">
    
    
    <% if howtodo.viewed(current_user) == true %>
      <div class="text-success far fa-check-square"></div>
      <!--VIEWED
      -->
    <% else %>
      <div class="text-danger far fa-check-square"></div>
    <% end %>
        
    
    
    <div class="fa fa-graduation-cap"></div>
    <%= link_to howtodo.title, howtodo_path(howtodo) %>
  </div>
  <div class="card-footer">
    <div class="row">
      <div class="col-md-6">
        <div class="far fa-clock"></div>
        <%= howtodo.created_at.strftime('%d-%b-%Y') %>
      </div>
      <div class="col-md-6">
        <div class="text-right">
          <div class="fa fa-chalkboard-teacher"></div>
          <%= link_to howtodo.user.username, user_path(howtodo.user) %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <div class="text-warning fa fa-star"></div>
      <b>
        <%= howtodo.average_rating %>
      </b>
      <br>
      <p>rating count: <%= howtodo.ratings_count %></p>
    </div>
  </div>
  <% if current_user %>
    <% if policy(howtodo).edit? %>
      <div class="card-footer">
        <!--- if policy(course).edit?
        -->
        <%= link_to 'Edit', edit_howtodo_path(howtodo), class: 'btn btn-sm btn-warning' %>
        <!--- if policy(course).destroy?
        -->
        <%= link_to 'Destroy', howtodo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
      </div>
    <% end %>
  <% end %>
</div>
