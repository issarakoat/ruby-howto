<p id="notice"><%= notice %></p>
<% content_for :title do %>
  Howto 
  | 
  All Howtodos
<% end %>

<h1>Howto</h1>
<h3>
  <div class="text-center">
    How to dos
    <div class="badge badge-info">
      <%= @howtodos.count %>
    </div>
  </div>
</h3>

<div class="row">
  <div class="col-md-2">
<%= search_form_for @ransack_howtodos, as: :howtodos_search, url: @ransack_path do |f| %>
  <%= f.label :title %>
  <%= f.search_field :title_cont, placeholder: 'Title', class: 'form-control form-control-sm' %>
  <%= f.label :Creator %>
  <%= f.search_field :user_email_cont, placeholder: 'Email', class: 'form-control form-control-sm' %>
  <div class="row"></div>
  <%= sort_link(@ransack_howtodos, :average_rating, "Top Rated") %>
  <div class="row"></div>
  <%= sort_link(@ransack_howtodos, :ratings_count, "Most Popular") %>
  <div class="row"></div>
  <%= sort_link(@ransack_howtodos, :created_at, "Fresh") %>
  <div class="row"></div>
  <%= f.submit %>
<% end %>
  </div>
  <div class="col-md-10">
    <div class="card-columns">
      <% @howtodos.each do |howtodo| %>
        <%= render 'howtodos/howtodo', howtodo: howtodo %>
      <% end %>
    </div>
  </div>
</div>


<%= raw(pagy_bootstrap_nav(@pagy)) %>

<br>
